[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	# insanely beautiful diffs
	pager = diff-highlight | diff-so-fancy | less -r
    editor = mvim
	
# so much color
[color]
	ui = always
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[gc]
    auto = 1

# correct typos
[help]
	autocorrect = 1

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current
