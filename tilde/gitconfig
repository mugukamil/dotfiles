[user]
	email = mugukamil@gmail.com
	name = mugukamil

[core]
	excludesfile = /Users/mugukamil/.gitignore
	attributesfile = ~/.gitattributes
	# insanely beautiful diffs
	pager = diff-highlight | diff-so-fancy | less -r
	editor = mvim -f
	
# so much color
[color]
    ui = always
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[gc]
    auto = 1

# correct typos
[help]
	autocorrect = 1

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
